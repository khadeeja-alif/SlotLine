<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="SlotLineTest.MaterialEntry"
             xmlns:entry="clr-namespace:SlotLineTest">
    <ContentView.Content>
         <Grid ColumnSpacing="16" Margin="0,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1"/>
            </Grid.RowDefinitions>
            <Label x:Name="HiddenLabel" FontSize="14" IsVisible="False" Margin="0" TextColor="#989898"/>
            <entry:CustomEntry x:Name="EntryField" Text="{Binding Text, Mode=TwoWay}" FontSize="14" Margin="0,12,0,0" FontFamily="{StaticResource RegularFont}">
                  <entry:CustomEntry.Keyboard>
        <Keyboard x:FactoryMethod="Create">
            <x:Arguments>
                <KeyboardFlags>Suggestions,Spellcheck,CapitalizeWord</KeyboardFlags>
            </x:Arguments>
        </Keyboard>
    </entry:CustomEntry.Keyboard>
                </entry:CustomEntry>
            <BoxView x:Name="BottomBorder" Grid.Row="1" HeightRequest="1" Margin="0" HorizontalOptions="FillAndExpand"/>
            <BoxView x:Name="HiddenBottomBorder" Grid.Row="1" HeightRequest="1" Margin="0" WidthRequest="0" HorizontalOptions="Center"/>
</Grid>
    </ContentView.Content>
</ContentView>
